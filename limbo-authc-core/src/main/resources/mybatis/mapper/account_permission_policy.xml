<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.limbo.authc.core.dao.AccountPermissionPolicyMapper" >

    <resultMap id="AccountPermissionPolicy" type="org.limbo.authc.api.interfaces.beans.po.AccountPermissionPolicyPO">
        <result column="project_id" jdbcType="BIGINT" property="projectId" javaType="Long"/>
        <result column="account_id" jdbcType="BIGINT" property="accountId" javaType="Long"/>
        <result column="perm_code" jdbcType="VARCHAR" property="permCode" javaType="String"/>
        <result column="policy" jdbcType="VARCHAR" property="policy" javaType="String"/>
    </resultMap>

    <insert id="addPolicies">
        insert into l_account_permission_policy ( project_id, account_id, perm_code, policy )
        values
            <foreach collection="policies" separator="," item="p">
                ( #{p.projectId}, #{p.accountId}, #{p.permCode}, #{p.policy} )
            </foreach>
    </insert>

    <delete id="deletePolicies">
        delete from l_account_permission_policy where project_id = #{projectId} and account_id = #{accountId}
    </delete>

    <delete id="deletePoliciesByPermission">
        delete from l_account_permission_policy
        where perm_code = #{permCode}
              and project_id = #{projectId}
    </delete>

    <select id="getPolicies" resultMap="AccountPermissionPolicy">
        select * from l_account_permission_policy
        where project_id = #{projectId}
              and account_id in (<foreach collection="accountIds" separator="," item="ai">#{ai}</foreach>)
              <if test="policy != null and policy != ''">
                  and policy = #{policy}
              </if>
    </select>

    <select id="getAllowedPermCodes" resultType="java.lang.String">
        select perm_code
        from l_account_permission_policy
        where project_id = #{projectId} and policy = `ALLOWED`
              and account_id in (<foreach collection="accountIds" separator="," item="ai">#{ai}</foreach>)
    </select>

    <select id="getRefusedPermCodes" resultType="java.lang.String">
        select perm_code
        from l_role_permission_policy
        where project_id = #{projectId} and policy = `REFUSED`
              and account_id in (<foreach collection="accountIds" separator="," item="ai">#{ai}</foreach>)
    </select>

</mapper>