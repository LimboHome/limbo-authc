<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.limbo.authc.core.dao.RoleMenuMapper" >


    <resultMap id="Role" type="org.limbo.authc.api.interfaces.beans.po.RolePO">
        <id column="role_id" jdbcType="BIGINT" property="roleId"/>
        <result column="project_id" jdbcType="BIGINT" property="projectId"/>
        <result column="role_name" jdbcType="VARCHAR" property="roleName"/>
        <result column="role_desc" jdbcType="VARCHAR" property="roleDesc"/>
        <result column="is_default" jdbcType="BIT" property="isDefault"/>
        <result column="gmt_created" jdbcType="TIMESTAMP" property="gmtCreated"/>
        <result column="gmt_modified" jdbcType="TIMESTAMP" property="gmtModified"/>
    </resultMap>

    <insert id="addRoleMenus">
        insert into l_role_menu ( project_id, role_id, menu_code )
        values
            <foreach collection="menuCodes" separator="," item="mc">
                ( #{projectId}, #{roleId}, #{mc} )
            </foreach>
    </insert>

    <delete id="deleteRoleMenus">
        delete from l_role_menu where role_id = #{roleId} and project_id = #{projectId}
    </delete>

    <delete id="deleteRoleMenusNotIn">
        delete from l_role_menu
        where role_id = #{roleId}
              and project_id = #{projectId}
              and menu_code not in (<foreach collection="menuCodes" separator="," item="mc">#{mc}</foreach>)
    </delete>

    <delete id="deleteMenuRelatedRole">
        delete from l_role_menu
        where menu_code = #{menuCode}
              and project_id = #{projectId}
    </delete>

    <select id="getRoleMenus" resultMap="org.limbo.authc.core.dao.MenuPermissionMapper.Menu">
        select m.*
        from l_menu m
        left join l_role_menu rm on rm.menu_code = m.menu_code
        where rm.role_id in (<foreach collection="roleIds" separator="," item="ri">#{ri}</foreach>)
              and m.project_id = #{projectId}
    </select>

    <select id="getRoleMenuCodes" resultType="java.lang.String">
        select
            menu_code
        from l_role_menu
        where role_id in (<foreach collection="roleIds" separator="," item="ri">#{ri}</foreach>)
              and project_id = #{projectId}
    </select>

    <select id="getGroupedRoleMenuCodes" resultType="org.limbo.authc.api.interfaces.utils.tuple.Tuple">
        select
            role_id as a,
            menu_code as b
        from l_role_menu
        where role_id in (<foreach collection="roleIds" separator="," item="ri">#{ri}</foreach>)
              and project_id = #{projectId}
    </select>

</mapper>