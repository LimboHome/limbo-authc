<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.limbo.authc.core.dao.AccountMapper" >


    <update id="updateBaseInfo" parameterType="org.limbo.authc.api.interfaces.beans.po.AccountPO">
        update l_account
        <set>
            <if test="nick != null and nick != ''">nick = #{nick},</if>
        </set>
        <where>
            and account_id = #{accountId}
            and project_id = #{projectId}
        </where>
    </update>

    <update id="updatePassword">
        update l_account
        set
            `password` = #{newPassword}
        <where>
            and account_id = #{accountId}
            and project_id = #{projectId}
        </where>
    </update>

    <update id="updateLoginInfo" parameterType="org.limbo.authc.api.interfaces.beans.po.AccountPO">
        update l_account
        set
            last_login = #{lastLogin},
            last_login_ip = #{lastLoginIp}
        <where>
            and account_id = #{accountId}
            and project_id = #{projectId}
        </where>
    </update>

</mapper>