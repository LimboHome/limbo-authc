<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.limbo.authc.core.dao.MenuPermissionMapper" >

    <resultMap id="Menu" type="org.limbo.authc.api.interfaces.beans.po.MenuPO">
        <result column="menu_code" jdbcType="VARCHAR" property="menuCode"/>
        <result column="menu_name" jdbcType="VARCHAR" property="menuName"/>
        <result column="icon" jdbcType="VARCHAR" property="icon"/>
        <result column="parent_menu_code" jdbcType="VARCHAR" property="parentMenuCode"/>
        <result column="is_default" jdbcType="BIT" property="isDefault"/>
        <result column="gmt_created" jdbcType="TIMESTAMP" property="gmtCreated"/>
        <result column="gmt_modfied" jdbcType="TIMESTAMP" property="gmtModified"/>
    </resultMap>

    <resultMap id="Permission" type="org.limbo.authc.api.interfaces.beans.po.PermissionPO">
        <result column="project_id" jdbcType="BIGINT" property="projectId"/>
        <result column="perm_code" jdbcType="VARCHAR" property="permCode"/>
        <result column="perm_name" jdbcType="VARCHAR" property="permName"/>
        <result column="perm_desc" jdbcType="VARCHAR" property="permDesc"/>
        <result column="apis" jdbcType="VARCHAR" property="apis"/>
        <result column="is_online" jdbcType="BIT" property="isOnline"/>
        <result column="is_default" jdbcType="BIT" property="isDefault"/>
        <result column="gmt_created" jdbcType="TIMESTAMP" property="gmtCreated"/>
        <result column="gmt_modified" jdbcType="TIMESTAMP" property="gmtModified"/>
    </resultMap>

    <insert id="addMenuPermission">
        replace into l_menu_permission ( project_id, menu_code, perm_code )
        values
            <foreach collection="permCodes" separator="," item="permCode">
                ( #{projectId}, #{menuCode}, #{permCode} )
            </foreach>
    </insert>

    <delete id="deleteMenuPermission">
        delete from l_menu_permission where menu_code = #{menuCode} and project_id = #{projectId}
    </delete>

    <delete id="deleteMenuPermissionNotIn">
        delete from l_menu_permission
        where menu_code = #{menuCode}
              and project_id = #{projectId}
              and perm_code not in (<foreach collection="permCodes" separator="," item="pc">#{pc}</foreach>)
    </delete>

    <delete id="deletePermissionRelatedMenu">
        delete from l_menu_permission
        where perm_code = #{permCode} and project_id = #{projectId}
    </delete>

    <select id="getMenuPermissions" resultMap="Permission">
        select p.*
        from l_permission p
        left join l_menu_permission mp on mp.perm_code = p.perm_code
        where mp.menu_code in (<foreach collection="menuCodes" separator="," item="mc">#{mc}</foreach>)
              and p.project_id = #{projectId}

    </select>

    <select id="getMenuPermissionCodes" resultType="java.lang.String">
        select perm_code
        from l_menu_permission
        where project_id = #{projectId}
              and menu_code in (<foreach collection="menuCodes" separator="," item="mc">#{mc}</foreach>)
    </select>
</mapper>