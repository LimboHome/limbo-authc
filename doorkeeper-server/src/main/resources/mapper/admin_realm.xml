<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.limbo.doorkeeper.server.dao.AdminRealmMapper" >

    <resultMap id="AdminRealmVO" type="org.limbo.doorkeeper.api.model.vo.AdminRealmVO">
        <result column="admin_realm_id" property="adminRealmId" jdbcType="BIGINT" javaType="java.lang.Long" />
        <result column="user_id" property="userId" jdbcType="BIGINT" javaType="java.lang.Long" />
        <result column="realm_id" property="realmId" jdbcType="BIGINT" javaType="java.lang.Long" />
        <result column="name" property="name" jdbcType="VARCHAR" javaType="java.lang.String" />
        <result column="is_admin" property="isAdmin" jdbcType="BIT" javaType="java.lang.Boolean"/>
    </resultMap>

    <sql id="queryCondition">
        and ar.realm_id = r.realm_id
        <if test="userId != null">
            and ar.user_id = #{userId}
        </if>
    </sql>
    <select id="pageVOCount" resultType="java.lang.Long">
        select count(*)
        from admin_realm ar, realm r
        <where>
            <include refid="queryCondition"></include>
        </where>
    </select>
    <select id="pageVOS" resultMap="AdminRealmVO">
        select ar.*, r.name
        from admin_realm ar, realm r
        <where>
            <include refid="queryCondition"></include>
        </where>
        order by ar.admin_realm_id desc
        <if test="offset != null and size != null">
            LIMIT #{offset}, #{size}
        </if>
    </select>

</mapper>
